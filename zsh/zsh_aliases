# Variables

DV_PATH=~/Videos/downloaded

# Helpers

web-search() {
	firefox -new-tab "https://duckduckgo.com/?q=$1"
}

download-stream() {
	mkdir -p $DV_PATH
	youtube-dl -o "$DV_PATH/%(title)s-%(id)s.%(ext)s" "$1"
}

watch-stream() {
	mpv -fs -cookies $(youtube-dl -g $1)
}

listen-stream() {
	mpv --no-video -cookies $(youtube-dl -g $1)
}

# Aliases

