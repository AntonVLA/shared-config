alias ls='ls -px --group-directories-first --color=auto'
alias ll='ls -lh'
alias la='ls -A'
alias lla='la -l'
alias ln='ln -i'

alias df='df -h'
alias du='du -h'

alias ec='emacsclient -n'
alias enw='emacsclient -nw'

alias qwfp='setxkbmap fr'
alias qwer='setxkbmap fr-colemak'
alias azer='setxkbmap fr-colemak'
alias qwert='setxkbmap fr-colemak swap-ctrl-alt'
alias azert='setxkbmap fr-colemak swap-ctrl-alt'

alias en='dict -d wn'
alias fr='dict -d french'
alias enc='dict -d foldoc'
alias en2fr='dict -d fd-eng-fra'
alias fr2en='dict -d fd-fra-eng'

alias jsconsole='firefox -jsconsole'
