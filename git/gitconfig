[core]
	editor = nano

[color]
	status = true
	branch = true
	diff = true
	interactive = true

[alias]
	staged = diff --staged
	update = "! git fetch --all --prune ; git fetch --tags"
	ignore-file = "! f() { curl https://www.gitignore.io/api/$@; } ; f"
	br = branch
	co = checkout
	st = status
	sta = staged

[push]
	default = simple

[include]
	path = .gitprivateconfig
