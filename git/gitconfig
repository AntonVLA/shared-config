[core]
	editor = "nano"

[color]
	status = true
	branch = true
	diff = true
	interactive = true

[log]
  abbrevCommit = true
  decorate = true
  date = relative

[diff]
  algorithm = patience
  compactionHeuristic = false

[alias]
	ignore-file = "! f() { curl https://www.gitignore.io/api/$@; } ; f"
	staged = diff --staged
	update = "! git fetch --all --prune; git fetch --tags"
	br = branch
	co = checkout
	st = status
	sta = "! git staged"

[push]
	default = current

